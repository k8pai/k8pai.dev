datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Guestbook {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  email      String
  name		 String
  body       String
  created_by String
  updated_at DateTime?
}

model Views {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  count Int
}
