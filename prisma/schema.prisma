datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Guestbook {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  email      String
  body       String
  links      String[]  @default([])
  created_by String
  updated_at DateTime?
}

model Interactions {
  id    String  @id @default(auto()) @map("_id") @db.ObjectId
  email String
  liked Boolean
}

model Views {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  slug  String @unique
  count Int
}
